local function setPlaybackMode(mode)
    if mode == "timing" or mode == "wave" or mode == "both" then
        playbackMode = mode
        print(string.format("üéÆ Playback mode set to: %s", mode))
    else
        warn("Invalid playback mode:", mode)
    end
end

